<p><button class="btn btn-info btn-sm" data-bind="click: addItem">Add items</button></p>
<table class="table table-striped" data-bind="visible: SalesOrderItems().length>0">
    <thead>
        <tr>
            <th>Product code</th>
            <th class="text-right">Quantity</th>
            <th class="text-right">Unit price</th>
            <th class="text-right">Price</th>
            <th></th>
        </tr>
    </thead>
    <tbody data-bind="foreach: SalesOrderItems">
        <tr>
            <td class="form-group"><input class="form-control input-sm" data-bind="value: ProductCode, event: {change: flagAsEdited}, hasFocus: true" /></td>
            <td class="form-group"><input class="form-control input-sm text-right" data-bind="value: Quantity, event: {change: flagAsEdited}" /></td>
            <td class="form-group"><input class="form-control input-sm text-right" data-bind="value: UnitPrice, event: {change: flagAsEdited}" /></td>
            <td class="form-group"><span class="form-control text-right" data-bind="text: TotalPrice"></span></td>
            <td class="form-group"><button class="btn btn-danger" data-bind="click: $parent.DeleteOrderItem">Delete</button></td>
        </tr>
    </tbody>
    <tr>
        <td>&nbsp</td>
        <td>&nbsp</td>
        <td class="form-group text-right"><span>Total price</span></td>
        <td class="form-group text-right"><span class="form-control" data-bind="text: TotalPrice()"></span></td>
        <td>&nbsp</td>
    </tr>
</table>